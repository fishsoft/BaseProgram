<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 优惠互动radio -->
    <style name="DiscountRadioStyle">
        <item name="android:layout_width">@dimen/dip_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dip_54</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/selector_default_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dip_10</item>
        <item name="android:paddingRight">@dimen/dip_10</item>
        <item name="android:paddingBottom">@dimen/dip_3</item>
        <item name="android:paddingTop">@dimen/dip_3</item>
    </style>

    <style name="healthyview_style">
        <item name="android:paddingBottom">32dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">260dp</item>
        <item name="lineWidth">2dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="coordinatesLineWidth">2px</item>
        <item name="lineColor">#6acfed</item>
        <item name="maxcircleColor">#6acfed</item>
        <item name="coordinatesTextSize">11sp</item>
        <item name="coordinatesTextColor">#808080</item>
    </style>

    <style name="healthy_notify_texstyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#808080</item>
    </style>
    <style name="healthy_report_textstyle">
        <item name="android:textColor">#3d97da</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>


</resources>
